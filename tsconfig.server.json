{
    "compilerOptions": {
        "outDir": "dist/",
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es2017"
        ],
        "types": [
            "node", "express"
        ],
        "baseUrl": ".",
        "paths": {
            "*": ["types/*"]
        }
    },
    "include": [
        "src/server/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
}